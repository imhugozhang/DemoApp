<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Connect3GameActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board"
        android:layout_centerInParent="true" android:id="@+id/gridLayout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView0"
            android:layout_column="0" android:layout_row="0" android:layout_margin="17dp" android:onClick="dropIn"
            android:tag="0"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView1"
            android:layout_column="0" android:layout_row="1" android:layout_margin="17dp" android:onClick="dropIn"
            android:tag="1"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView2"
            android:layout_column="0" android:layout_row="2" android:layout_margin="17dp" android:onClick="dropIn"
            android:tag="2"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView3"
            android:layout_column="1" android:layout_row="0" android:layout_margin="15dp" android:onClick="dropIn"
            android:tag="3"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView4"
            android:layout_column="1" android:layout_row="1" android:layout_margin="17dp" android:onClick="dropIn"
            android:tag="4"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView5"
            android:layout_column="1" android:layout_row="2" android:layout_margin="10dp" android:onClick="dropIn"
            android:tag="5"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView6"
            android:layout_column="2" android:layout_row="0" android:layout_margin="10dp" android:onClick="dropIn"
            android:tag="6"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView7"
            android:layout_column="2" android:layout_row="1" android:layout_margin="10dp" android:onClick="dropIn"
            android:tag="7"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageView8"
            android:layout_column="2" android:layout_row="2" android:layout_margin="10dp" android:onClick="dropIn"
            android:tag="8"/>
    </GridLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" android:id="@+id/playAgainLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/endGameTextView" android:textSize="36sp"
            android:background="#CDDC39"/>
        <Button
            android:text="Play Again?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/playAgainButton" android:textSize="24sp"
            android:onClick="startGame"/>
    </LinearLayout>
</RelativeLayout>